%h1 Listing Groups
%table.table-striped.table-auto
  %thead
    %tr
      %th UUID
      %th Name
      %th Short Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.uuid
        %td= group.name
        %td= group.short_name
        %td= truncate(group.description)
        %td= link_to 'Show', group_path(group)
        %td= link_to 'Edit', edit_group_path(group)
        %td= link_to 'Destroy', group_path(group), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Group', new_group_path
